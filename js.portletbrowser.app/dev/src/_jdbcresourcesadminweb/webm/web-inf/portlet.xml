<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns='http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd'
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation='http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd file:/D:/Java/Specifications/portlet-app_1_0.xsd' version="1.0">
    
    <portlet>
        <portlet-name>JDBC Resources</portlet-name>
        <portlet-class>com.sun.faces.portlet.FacesPortlet</portlet-class>
	           <init-param> 
                    <description>Portlet init page</description>
        	     <name>com.sun.faces.portlet.INIT_VIEW</name>
			<value>/jdbc.jsp</value>
        	    </init-param>

        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>JDBCResourcesPortlet</title>
        </portlet-info>
        
    </portlet>

</portlet-app>
