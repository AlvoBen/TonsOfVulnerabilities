<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">


  <!-- Install Replacement Factory Objects -->
  <factory>
    <faces-context-factory>
      com.sun.faces.portlet.FacesContextFactoryImpl
    </faces-context-factory>
    <lifecycle-factory>
      com.sun.faces.portlet.LifecycleFactoryImpl
    </lifecycle-factory>
  </factory>
  
  <!-- Install Replacement Application Objects -->  
  <application>
    <view-handler>
        com.sun.faces.portlet.ViewHandlerImpl
    </view-handler>
  </application>   

  <component>
    <component-type>PortletComponent</component-type>
    <component-class>com.sun.faces.portlet.PortletComponent</component-class>
    <property>
      <property-name>portletId</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    
    <component-extension>
      <component-family>PortletComponent</component-family>
    </component-extension>
    
  </component>
</faces-config>
