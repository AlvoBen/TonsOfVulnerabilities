<BUSINESSSERVICE NAME="security">
  <DESCRIPTION LOCALE="en" VALUE="Security Service"/>
  <ACTION NAME="um.all.all">
    <DESCRIPTION LOCALE="en" VALUE="Allows access to user management."/>
    <PERMISSION CLASS="com.sap.engine.services.security.restriction.UMPermission" NAME="security.um" VALUE="ALL:$:ALL"/>
  </ACTION>
  <ACTION NAME="crypto.all.all">
    <DESCRIPTION LOCALE="en" VALUE="Allows modification of the order of the cryptography providers."/>
    <PERMISSION CLASS="com.sap.engine.services.security.restriction.CryptoPermission" NAME="security.crypto" VALUE="ALL:$:ALL"/>
  </ACTION>
  <ACTION NAME="domains.all.all">
    <DESCRIPTION LOCALE="en" VALUE="Allows modifications of the protection domains."/>
    <PERMISSION CLASS="com.sap.engine.services.security.restriction.DomainsPermission" NAME="security.domains" VALUE="ALL:$:ALL"/>
  </ACTION>
  <ACTION NAME="auth.all.all">
    <DESCRIPTION LOCALE="en" VALUE="Allows modifications of the login module stacks."/>
    <PERMISSION CLASS="com.sap.engine.services.security.restriction.AuthPermission" NAME="security.auth" VALUE="ALL:$:ALL"/>
  </ACTION>
  <ROLE NAME="Administrator">
    <ASSIGNEDACTION NAME="um.all.all"/>
    <ASSIGNEDACTION NAME="crypto.all.all"/>
    <ASSIGNEDACTION NAME="domains.all.all"/>
    <ASSIGNEDACTION NAME="auth.all.all"/> 
  </ROLE> 
</BUSINESSSERVICE>