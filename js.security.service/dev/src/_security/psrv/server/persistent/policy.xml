<?xml version="1.0" encoding="UTF-8"?>
<ps:policy-configuration xmlns:ps="http://schemas.xmlsoap.org/soap/encoding/"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.xmlsoap.org/soap/encoding/ policy.xsd">
	<policy  userstore="DBMS User Store">
		<configuration name="basic">
			<authentication>
				<entry>
					<classname>
						com.sap.engine.services.security.server.jaas.BasicPasswordLoginModule
					</classname>
					<flag>
						sufficient
					</flag>
					<option/>
				</entry>
			</authentication>
		</configuration>
				<configuration name="form">
			<authentication>
				<entry>
					<classname>
						com.sap.engine.services.security.server.jaas.BasicPasswordLoginModule
					</classname>
					<flag>
						sufficient
					</flag>
					<option/>
				</entry>
			</authentication>
		</configuration>
		<configuration name="client_cert">
			<authentication>
				<entry>
					<classname>
						com.sap.engine.services.security.server.jaas.ClientCertLoginModule
					</classname>
					<flag>
						sufficient
					</flag>
					<option subject="" /> 
					<option issuer="" /> 
					<option SerialNumber="" /> 
					<option CertAuth="" /> 
				</entry>
			</authentication>
		</configuration>
		<configuration name="digest">
			<authentication>
				<entry>
					<classname>
						com.sap.engine.services.security.server.jaas.DigestLoginModule
					</classname>
					<flag>
						sufficient
					</flag>
					<option/>
				</entry>
			</authentication>
		</configuration>
		<configuration name="SAP-J2EE-Engine">
			<authentication>
				<entry>
					<classname>
						com.sap.engine.services.security.server.jaas.BasicPasswordLoginModule
					</classname>
					<flag>
						sufficient
					</flag>
					<option/>
				</entry>
			</authentication>
			<authorization>
				<security-role name="administrators">
					<group>
						administrators
					</group>
				</security-role>
				<security-role name="guests">
					<group>
						guests
					</group>
				</security-role>
				<security-role name="all">
					<group>
						all
					</group>
				</security-role>
				<security-role name="SAP_JAVA_SUPPORT">
				</security-role>
			</authorization>
		</configuration>
		<configuration name="service.naming">
			<authentication>
				<template>
					SAP-J2EE-Engine
				</template>
			</authentication>
			<authorization>
				<security-role name="jndi_all_operations">
					<group>
						administrators
					</group>
					<group>
						guests
					</group>
				</security-role>
				<security-role name="jndi_get_initial_context">
					<group>
						administrators
					</group>
					<group>
						guests
					</group>
				</security-role>
			</authorization>
		</configuration>
		<configuration name="service.telnet">
			<authentication>
				<template>
					SAP-J2EE-Engine
				</template>
			</authentication>
			<authorization>
				<security-role name="telnet_login">
					<group>
						administrators
					</group>
				</security-role>
			</authorization>
		</configuration>
	</policy>
</ps:policy-configuration>
