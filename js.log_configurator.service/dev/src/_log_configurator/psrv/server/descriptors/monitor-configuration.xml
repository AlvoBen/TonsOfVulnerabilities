<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE monitor-configuration SYSTEM "monitor-configuration.dtd">

<monitor-configuration>

    <monitor-semantics>
        <simple-configuration-group name="LOG_CFG.LogConfiguratorService">
            <description ID="LOG_CFG.LogConfiguratorService"></description>
        </simple-configuration-group>
        
        <simple-configuration-group name="LOG_CFG.GeneralGroup">
            <description ID="LOG_CFG.GeneralGroup"></description>
        </simple-configuration-group>
 
         <simple-configuration-group name="LOG_CFG.LogsGroup">
            <description ID="LOG_CFG.LogsGroup">Number of log and trace messages</description>
        </simple-configuration-group>
               
        <long-configuration-group name="LOG_CFG.TotalArchivesSize" unit="KB">
            <description ID="LOG_CFG.TotalArchivesSize">Total size of all log and trace archives.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
           <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group>
        
        <long-configuration-group name="LOG_CFG.TotalFileSize" unit="KB">
            <description ID="LOG_CFG.TotalFileSize">Total size of all log and trace files exluding archives.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
            <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group>
        
          <long-configuration-group name="LOG_CFG.NumberOfDebugLogs" unit="">
            <description ID="LOG_CFG.NumberOfDebugLogs">Messages with Debug severity.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
            <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group> 
         
            <long-configuration-group name="LOG_CFG.NumberOfPathLogs" unit="">
            <description ID="LOG_CFG.NumberOfPathLogs">Messages with Path severity</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
            <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group> 
                   
          <long-configuration-group name="LOG_CFG.NumberOfInfoLogs" unit="">
            <description ID="LOG_CFG.NumberOfInfoLogs">Messages with Info severity.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
            <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group> 
        
            <long-configuration-group name="LOG_CFG.NumberOfWarningLogs" unit="">
            <description ID="LOG_CFG.NumberOfWarningLogs">Messages with Warning severity.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
             <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group>  
         
        <long-configuration-group name="LOG_CFG.NumberOfErrorLogs" unit="">
            <description id="LOG_CFG.NumberOfErrorLogs">Messages with Error severity.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
             <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group> 
          
        <long-configuration-group name="LOG_CFG.NumberOfFatalLogs" unit="">
            <description ID="LOG_CFG.NumberOfFatalLogs">Messages with Fatal severity</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
             <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group>   
        
         <long-configuration-group name="LOG_CFG.NumberOfAllLogs" unit="">
            <description ID="LOG_CFG.NumberOfAllLogs">Number of all log and trace messages.</description>
            <data-collection react-on-failure="IGNORE" >
                <polled-by-monitor period="5" unit="MINUTE"/>
            </data-collection>
             <thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
        </long-configuration-group>
		
		<frequency-configuration-group name="LOG_CFG.LogsPerMin" >
		 <description ID="LOG_CFG.LogsPerMin">Log frequency.</description>
		 <data-collection react-on-failure="IGNORE" >
			<polled-by-monitor period="1" unit="MINUTE"/>
		 </data-collection>
		 <thresholds green-to-yellow="50" yellow-to-red="100" red-to-yellow="100" yellow-to-green="50"/>
	    </frequency-configuration-group>
    </monitor-semantics>  
    <monitor-tree>
        <services>
            <summary name="Log Configurator" configuration-group="LOG_CFG.LogConfiguratorService">
                <object name="General" configuration-group="LOG_CFG.GeneralGroup">
                    <long-monitor name="TotalLogArchivesSize" configuration-group="LOG_CFG.TotalArchivesSize">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="TotalArchiveSize"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    
                    <long-monitor name="TotalLogFilesSize" configuration-group="LOG_CFG.TotalFileSize">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="TotalFileSize"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                </object>
                   <object name="Messages" configuration-group="LOG_CFG.LogsGroup">
                    <long-monitor name="All" configuration-group="LOG_CFG.NumberOfAllLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="TotalLogsCount"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    <frequency-monitor name="Log frequency" configuration-group="LOG_CFG.LogsPerMin">
			<monitored-resource name="log_configurator" type="SERVICE"/>
			<frequency-attribute-mapping>
		    	    <reported-events-attribute>
			        <observed-resource-attribute name="TotalLogsCount"/>
			    </reported-events-attribute>
		        </frequency-attribute-mapping>
		    </frequency-monitor>
                    <long-monitor name="Debug" configuration-group="LOG_CFG.NumberOfDebugLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="DebugCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    <long-monitor name="Path" configuration-group="LOG_CFG.NumberOfPathLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="PathCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    <long-monitor name="Info" configuration-group="LOG_CFG.NumberOfInfoLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="InfoCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    <long-monitor name="Warning" configuration-group="LOG_CFG.NumberOfWarningLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="WarningCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>
                    <long-monitor name="Error" configuration-group="LOG_CFG.NumberOfErrorLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="ErrorCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>       
                    <long-monitor name="Fatal" configuration-group="LOG_CFG.NumberOfFatalLogs">
                        <monitored-resource name="log_configurator" type="SERVICE"/>
                        <long-attribute-mapping>
                            <long-attribute>
                                <observed-resource-attribute name="FatalCounter"/>
                            </long-attribute>
                        </long-attribute-mapping>
                    </long-monitor>                            
                </object>                           
            </summary>
        </services>
    </monitor-tree>
</monitor-configuration>
