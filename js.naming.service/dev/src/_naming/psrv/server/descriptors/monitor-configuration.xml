<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE monitor-configuration SYSTEM "monitor-configuration.dtd">

<monitor-configuration>
	<monitor-semantics>
		<simple-configuration-group name="NAMING.Naming Service">
			<description ID="NAMING.NamServ"/>
		</simple-configuration-group>
		<integer-configuration-group name="NAMING.ByteArrayCacheSize" unit="KB">
			<description ID="NAMING.NamSrv.ByteArrCacheSize">Size of the naming system byte array cache in KB. All the serializable object bindings in the naming system are kept in a repository as byte arrays. The maximum value of the cache size is fixed to 4MB when this value is reached the cache is reset.</description>
			<data-collection react-on-failure="IGNORE">
				<polled-by-monitor period="5" unit="MINUTE"/>
			</data-collection>
			<thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
		</integer-configuration-group>
		<integer-configuration-group name="NAMING.BoundObjectsCount">
			<description ID="NAMING.NamServ.BountObjCount">Number of objects bound in the naming system at the present time. The number of objects is formed from the number of the locally bound objects on a certain server node and the number of all the global object bindings in the cluster.</description>
			<data-collection react-on-failure="IGNORE">
				<polled-by-monitor period="5" unit="MINUTE"/>
			</data-collection>
			<thresholds green-to-yellow="0" yellow-to-red="-1" red-to-yellow="-1" yellow-to-green="0"/>
		</integer-configuration-group>
	</monitor-semantics>
	<monitor-tree>
		<services>
			<object name="JNDI Registry" configuration-group="NAMING.Naming Service">
				<integer-monitor name="Byte Array Cache Size" configuration-group="NAMING.ByteArrayCacheSize">
					<monitored-resource name="naming" type="SERVICE"/>
					<integer-attribute-mapping>
						<integer-attribute>
							<observed-resource-attribute name="ByteArrayCacheSize"/>
						</integer-attribute>
					</integer-attribute-mapping>
				</integer-monitor>
				<integer-monitor name="Bound Objects Count" configuration-group="NAMING.BoundObjectsCount">
					<monitored-resource name="naming" type="SERVICE"/>
					<integer-attribute-mapping>
						<integer-attribute>
							<observed-resource-attribute name="BoundObjectsCount"/>
						</integer-attribute>
					</integer-attribute-mapping>
				</integer-monitor>
			</object>
		</services>
	</monitor-tree>
</monitor-configuration>