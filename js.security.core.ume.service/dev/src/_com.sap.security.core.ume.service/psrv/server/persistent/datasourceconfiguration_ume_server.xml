<dataSources>    
    <dataSource id="UME_SERVER_DATASOURCE"
                className="com.sap.security.core.persistence.datasource.imp.UMEClientDataSource"
                isReadonly="false"
                isPrimary="true">

        <homeFor>
            <principals>
            	<principal type="*"/>
            </principals>
        </homeFor>
        <notHomeFor/>

        <responsibleFor>
            <principals>
            	<principal type="*"/>
            </principals>
        </responsibleFor>

        <privateSection>
        	<ume.client.remote_server>http://server:port/useradmin/servlet/com.sap.security.core.persistence.remote.http.imp.HTTPServerInterface</ume.client.remote_server>
        	<ume.client.timeout>-1</ume.client.timeout>
        </privateSection>
    </dataSource>

</dataSources>