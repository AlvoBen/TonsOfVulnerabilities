<dataSources>	
	<dataSource id="PCD_ROLE_PERSISTENCE"
			className="com.sapportals.portal.prt.service.usermanagement.persistence.pcd.GLRolePersistence"
			isReadonly="false"
			isPrimary="true">
			
		<homeFor/>
		
		<notHomeFor/>
		
		<responsibleFor>
			<principals>
				<principal type="role"/>
			</principals>
		</responsibleFor>
		
		<notResponsibleFor>
			<principals>
				<principal type="role">
					<nameSpaces>
						<nameSpace name="$usermapping$"/>
						<nameSpace name="com.sap.security.core.usermanagement">
							<attributes>
								<attribute name="PRINCIPAL_MODIFY_DATE"/>
								<attribute name="lastChangeOfUserAssignmentTimestamp"/>
							</attributes>
						</nameSpace>					
						<nameSpace name="com.sap.security.core.usermanagement.relation">
							<attributes>
								<attribute name="PRINCIPAL_RELATION_MEMBER_ATTRIBUTE"/>
							</attributes>
						</nameSpace>
					</nameSpaces>
				</principal>
			</principals>
		</notResponsibleFor>
	
		<attributeMapping/>
		
		<privateSection>
			<ume.pcd.access.user>ume_service</ume.pcd.access.user>
			<ume.pcd.blocked_roles.prefix>com.sap.portal,com.sap.km</ume.pcd.blocked_roles.prefix>
		</privateSection>
		
	</dataSource>		
</dataSources>
