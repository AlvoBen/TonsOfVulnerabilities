<apex:page standardController="Policy__c" extensions="VendorProgram_C_HUM" showHeader="false">
    <apex:includeScript value="/support/console/41.0/integration.js" />
    
    <apex:includeScript value="{!URLFOR($Resource.CRM_JQUERY, 'jquery.min.js')}" />
    
    <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, 'datatables.min.js')}" />
    <!-- <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables, '/Bootstrap-3.3.7/js/bootstrap.min.js')}" /> Surendra  -->
   
    
    <apex:includeScript value="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/Bootstrap/dist/js/bootstrap.min.js')}" /> <!-- replace CRM_DataTables with CRM_PLATFORM_TOOLKIT -->
    <!--<apex:includeScript value="{!URLFOR($Resource.CRM_DataTables, '/DataTables-1.10.20/js/jquery.dataTables.min.js')}" />-->
    <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, '/DataTables-1.13.4/js/dataTables.bootstrap.min.js')}" />
    <apex:includescript value="{!URLFOR($Resource.CRM_DataTables_1_13_4,'/DataTables-1.13.4/js/jquery.dataTables.min.js')}"/>
<apex:includeScript value="{!URLFOR($Resource.html2canvas, '/html2canvas.js')}" />
    <apex:includeScript value="{!URLFOR($Resource.html2canvas, '/jquery.plugin.html2canvas.js')}" />
    
    <apex:stylesheet value="{!URLFOR($Resource.MouseHoverPopUp_SR_HUM,'/MouseHoverPopUp_SR_HUM/main_css.css')}"/>
    <apex:includeScript value="{!URLFOR($Resource.MouseHoverPopUp_SR_HUM,'/MouseHoverPopUp_SR_HUM/PopUp_File.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.VendorFields_JS_HUM, '/VendorFields_JS_HUM/VendorFields_JS_HUM.js')}" />
    <apex:stylesheet value="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/CSS/HoverOver.css')}"/>
    <apex:pageblock mode="maindetail">
    
    <apex:pageblocksection >
        		<apex:pageBlockSectionItem rendered="{!((Policy__c.product__r.name == 'MED') && (isCRMSGBOPermissionSetUser))}">
                        <apex:outputLabel value="{!$Label.Vendor_Name}" styleClass="vendorn">                         
                             <style>                                                          
                                 .bPageBlock .detailList .labelCol{width :36%; font-size: 87%;}
                              </style>
                        </apex:outputLabel>																						
                      <apex:outputPanel id="vendorname">
                        <apex:outputText value="{!sProgramName}" id="VNAME" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                          
                        </apex:outputPanel>                       
                  </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel />
                        <apex:outputText />
                    </apex:pageBlockSectionItem>
                   <apex:pageBlockSectionItem rendered="{!((Policy__c.product__r.name == 'MED') && (isCRMSGBOPermissionSetUser))}">
                        <apex:outputLabel value="{!$Label.Vendor_Program}">
                              <style>                         
                                 .bPageBlock .detailList .dataCol {width: 80%;}
                              </style>
                        </apex:outputLabel>
                        <apex:outputPanel id="vendorprogram">
                        <apex:outputText value="{!sProgramDesc}" id="VPROGRAM"/>&nbsp;&nbsp;                          
                            <apex:outputLink id="showMoreLink2" value="" style="color: blue;">Show More</apex:outputLink>
                            <apex:outputLink id="hideLink2" value="" style="color: blue;">Hide</apex:outputLink>
                        </apex:outputPanel>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel />
                        <apex:outputText />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >     
                        <apex:outputLabel value="{!$Label.Program_Eff}" id="Peff"></apex:outputLabel>
                        <apex:outputPanel id="progeff">
                        	<apex:outputText value="{!sProgramEff}" id="PeffTextId"/>
                            <script>
                            jQuery("[id$='PeffTextId']").hide();
                            </script>
                        </apex:outputPanel>  
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel />
                        <apex:outputText />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!$Label.Program_End}" id="Pend"></apex:outputLabel>
                        <apex:outputPanel id="progend">
                            <apex:outputText value="{!sProgramEnd}" id="PendTextId"/>
                            <script>
                            jQuery("[id$='PendTextId']").hide();
                            </script>
                        </apex:outputPanel>
                    </apex:pageBlockSectionItem>
    </apex:pageblocksection>
    </apex:pageblock>
    <apex:form id="vendorformId">
        <apex:actionFunction name="vendorLoad" action="{!getGroupGBEInformation}" id="vendorId" reRender="vendorname,VPROGRAM,progend,progeff"/>
    </apex:form>
    <script>
   	var checkCrmsGboPermission= '{!isCRMSGBOPermissionSetUser}';
    var checkccpOnOff = {!ccpOnOff};
    jQuery(document).ready(function(){
        if(checkccpOnOff == true)
        {
            vendorLoad();
        }
        hideVendorRelatedFieldonLoad();           
    });
    </script>
</apex:page>