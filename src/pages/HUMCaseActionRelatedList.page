<apex:page standardController="Case" extensions="HUMCaseActionRelatedListController">
    <apex:includeScript value="/support/console/28.0/integration.js" />    
    <apex:includeScript value="{!URLFOR($Resource.HUMCaseActionRelatedList, '/HUMCaseActionRelatedList/HUMCaseActionRelatedListJS.js')}" /> 
    <script type="text/javascript">
        var HUMCOBProcess = '{!$Page.HUMCOBProcess}';     
        var HUMQAATemplates = '{!$Page.HUMQAATemplates}';
    </script>
    <apex:form >
        <apex:pageBlock id="pgBlock">
            <apex:pageblocksection columns="1">
                <apex:pageBlockTable value="{!listProcess}" var="p">
                    <apex:column headerValue="Process Type">
                        <apex:outputLink target="_blank" onclick="openActionTab('{!JSENCODE(p.Case__c)}','{!JSENCODE(p.Case_Action__r.Name)}'); return false;">{!JSENCODE(p.Case_Action__r.Name)}</apex:outputLink>
                    </apex:column>
                    <apex:column headerValue="Created Date">
                        <apex:outputField value="{!p.CreatedDate}" /></apex:column>
                    <apex:column headerValue="Created By">
                        <apex:outputField value="{!p.CreatedBy.Name}" /></apex:column>
                    <apex:column headerValue="Last Modified Date">
                        <apex:outputField value="{!p.LastModifiedDate}" /></apex:column>
                    <apex:column headerValue="Last Modified By">
                        <apex:outputField value="{!p.LastModifiedBy.Name}" /></apex:column>
                </apex:pageBlockTable>
            </apex:pageblocksection>
        </apex:pageBlock>
    </apex:form>
  
</apex:page>