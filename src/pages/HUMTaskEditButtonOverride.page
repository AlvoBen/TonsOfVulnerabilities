<apex:page standardController="Task" action="{!reDirectPage}" extensions="HUMTaskEditButtonOverrideExtension">
    <apex:outputText rendered="{!isStdEdit}" id="alert">
        <script>
            if((typeof sforce != 'undefined') && sforce && (!!sforce.one))
            {
                var navURL='{!navURL}';
                sforce.one.navigateToURL(navURL);
            }
            else{
                
                window.open ("/{!Task.Id}/e?retURL=%2F{!Task.Id}&nooverride=1","_self");
            }
        </script>
    </apex:outputText>
</apex:page>