<apex:page controller="WorkQueueActivateDeactivate_C_HUM" tabStyle="Work_Queue_Setup__c" sidebar="false" id="thePage" action="{!CheckValidation}">
    <apex:sectionHeader title="{!$Label.Deactivate_Queue_WORKQUEUE_HUM}" id="sectionHeader"/> 
    <apex:pageMessages id="deactivateQueuecompletionmsg"></apex:pageMessages>
    <apex:form id="theForm">
        <!-- For Constructor Related exception -->
        <c:HUMConstructorExceptionComponent errorLogs="{!listErrorLogs}" />
        <apex:pageBlock id="thePageBlock1">
            <b><apex:outputField value="{!workQueues.Name}" id="thePageBlock1OF1"/></b>
            <apex:pageBlockButtons location="Bottom" id="pageBlockButtons">
                <apex:commandButton value="{!$Label.Back_to_WQ_Queue_WORKQUEUE_HUM}" action="{!URLFOR($Action.Work_Queue_Setup__c.view, sWQSId)}" id="theBacktoWorkQueueSetupPageButton"/>
            </apex:pageBlockButtons>
            
            <apex:pageblockTable value="{!workQueues.Queue_Views__r}" var="queues" id="pbTable">
                <apex:column value="{!queues.Name}" id="pbTableQueueName"/>
                <apex:column value="{!queues.IsActive__c}" id="pbTableisActive"/>
                <apex:column headerValue="Pending Batch Turn" value="{!queues.IsActive__c}"  id="pbTableisPending" />
            </apex:pageblockTable>
        </apex:pageBlock>
        
     
    </apex:form>
</apex:page>