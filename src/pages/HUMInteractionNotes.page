<apex:page showHeader="false" sidebar="false">
    
    <apex:stylesheet value="{!URLFOR($Resource.HUMInteractionLog,'/HUMInteractionLog/HUMInteractionNoteStyleSheet.css')}"/>
    <apex:includeScript value="{!URLFOR($Resource.HUMInteractionLog,'/HUMInteractionLog/HUMInteractionNotes.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/CopyToClipBoard/CopyToClipBoard.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/CopyToClipBoard/CopyToClipBoardCaptureEvent.js')}"/>
    <apex:includescript value="/support/console/41.0/integration.js" /> 

    <apex:form StyleClass="formStyle">
        <!-- Empty output panel is created so as to avoid reRendering complete page on click of button -->
        <apex:outputPanel id="temp" ></apex:outputPanel>
        <div class="clear_button" >
            <apex:commandButton id="Clear_Btn" onclick="clear_div('{!$Label.HUMNotesClearDialog}');" reRender="temp" value="{!$Label.HUMClearNotesBtnLabel}"/>
        </div>
        <body class="body" >
            <textarea  rows="15" cols="70"  contenteditable="true" id="desc" ></textarea>
        </body>
    </apex:form>
    <script>
    sforce.console.addEventListener('CopyClipBoard', fnlistenerCopyClipBoard);
    </script>
    
    
</apex:page>