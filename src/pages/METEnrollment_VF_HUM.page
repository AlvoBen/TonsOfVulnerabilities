    <apex:outputpanel id="refreshDataScript">    
        <script>
            var sCompletedStatus = "{!$Label.HUMCompleted}";
            var sCancelledStatus = "{!$Label.HUMCancelled}";
            var sJsonMetTaskList = '{!JSENCODE(jsonMetTaskList)}';
        </script>
    </apex:outputpanel>
    <div id="metEnrollmentTableContainer" class="width100" >
        <table id="MetTaskTable" class="table table-striped table-bordered  dataTable no-footer width100"/>
    </div>
    <apex:form id="formId">
        <apex:actionFunction name="fetchMetTaskList" action="{!fetchMetTaskList}" rerender="refreshDataScript" oncomplete="drawTable(sJsonMetTaskList,false);"> </apex:actionFunction>
    </apex:form>
</apex:page>