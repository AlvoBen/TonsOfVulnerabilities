    <apex:includescript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, 'datatables.min.js')}"/>
    
    <apex:includeScript value="{!URLFOR($Resource.ProviderDisputesComponent_SR_HUM, 'ProviderDisputesComponent_JS_HUM.js')}" />  
    <apex:stylesheet value="{!URLFOR($Resource.ProviderDisputesComponent_SR_HUM,'ProviderDisputesComponent_CSS_HUM.css')}"/>
    
    <link rel="stylesheet" href="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/Bootstrap-3.3.6/css/bootstrap.min.css')}" />
