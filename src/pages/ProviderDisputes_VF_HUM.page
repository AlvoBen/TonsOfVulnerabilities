    <script type="text/javascript">
//dont enable P9 Critical Fix    vAccountDetail = jQuery.noConflict();
    </script>
    <script>
        if (sforce.console.isInConsole()) 
        {	
            sforce.console.setTabTitle('Provider Disputes Status-'+'{!JSENCODE(sAccountName)}');
            sforce.console.setTabTextStyle('font-size:99%;', null, null);
        }
       
    </script> 

    <apex:pageBlock mode="maindetail" id="pageBlock">
        <apex:pageblockSection >
              <apex:pageBlockSectionItem >
              </apex:pageBlockSectionItem>
        </apex:pageblockSection>     
   
     <apex:pageBlockSection title="Provider Correspondence Disputes Cases"  collapsible="true" columns="1" id="thePageBlockSectionCreditCardInfo">         
              <apex:pageBlockSectionItem >
              </apex:pageBlockSectionItem>
              <apex:pageBlockSectionItem >
              <apex:form >  
               <apex:actionFunction name="showMessage" action="{!showPageMessage}" rerender="showmsg,dtTableOutPanel"> 
               <apex:param name="level" assignTo="{!level}" value="" />
               <apex:param name="message" assignTo="{!message}" value="" />
               </apex:actionFunction>           
               
                <apex:pageMessages id="showmsg" />
               
               </apex:form>
              </apex:pageBlockSectionItem>
       </apex:pageblockSection>
        
        <apex:pageblockSection id="pageBlockSection" > 
           <apex:outputpanel rendered="{!isRendered}" id="dtTableOutPanel"> 
                <c:BaseDataTable_CMP_HUM rendered="{!isRendered}" jqueryVariable="jQuery"
                                         tableid="groupIdCardTable"
                                         tablecontainerid="groupIdCardTableContainer"
                                         enablesearch="f"
                                         info="true"
                                         keyword="false"
                                         sort="true"
                                         columnname="{!columnName}"
                                         objName="Case"                                        
                                         col1_editDelete="false"
                                         col1_orderable="false"
                                         columnHeader="{!columnHeader}"
                                         orderColumn="1"
                                         orderDirection="asc"
                                         orderingBool="true"
                                         htmlColumnName="caseNotifications"
                                         col1_searchable="true"
                                         col1_accordian="true"
                                         accordionColumns="sServiceType,sRequestType,sDateofDetermination,sProduct,sReceivedDate,sProviderTaxID,sDateofService,sClaimNumber,sAssignedAnalyst,notifications,context,medhokID,sCase"
                                        linkClass="IdClass"
                                        CheckBoxHeader="false"
                                        />
                                        
            </apex:outputpanel>
        </apex:pageBlockSection>
    </apex:pageBlock>
 
    <script>  
        Visualforce.remoting.timeout = '{!$Label.HUMMemWebActivityTimeout}';
        var vAccountId = '{!JSENCODE(sAccountId)}';
    	var vProviderDisputeJsonData = '{!$RemoteAction.ProviderDisputes_C_HUM.getProviderDisputeCases}';       
        jQuery(document).ready(function($) 
        {
            Visualforce.remoting.Manager.invokeAction(vProviderDisputeJsonData,'{!JSENCODE(sAccountId)}',fGetProviderDisputeJsonDataCallback,{ buffer: true, escape: true });
        });   
        var divdetails= document.getElementById('{!$Component.pageBlock.pageBlockSection}');
        jQuery(".hideListButton").click(function(){
            jQuery(divdetails).toggle();
        });
    
    </script>
    
