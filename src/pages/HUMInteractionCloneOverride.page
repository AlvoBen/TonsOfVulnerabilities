<apex:page action="{!queryInteraction}" standardController="Interaction__c" extensions="HUMInteractionCloneOverrideExtension" id="theintclnpage">
    <apex:includeScript value="/support/console/30.0/integration.js"/>
    <!--  Current page specific business logic is incorporated into the Javascript file -->
    <apex:includeScript value="{!$Resource.HUMInteractionCloneOverride}"/>
    <apex:form id="thepageform">
        <apex:pageMessages id="pagemsgid" />
        
        <apex:pageBlock title="{!$Label.HUMInteractionEdit}" id="pbIntLog" mode="edit">
            <apex:pageblockButtons location="top">
                <apex:commandButton value="{!$Label.HUMSaveBtn}" action="{!saveIntRecord}" />
                <apex:commandButton value="{!$Label.HUMCancel}" onclick="CloseTab(); return false;" reRender="{oOriginalInteractionRec.Id}"/>
            </apex:pageblockButtons> 
   
            <apex:pageblockSection title="{!$Label.HUMInformation}" id="pbsIntLogField">
                <apex:inputField value="{!oNewInteractionRec.Interaction_Origin__c}" id="inpintorg"/>
                <apex:inputField value="{!oNewInteractionRec.Interacting_With_type__c}" id="inpintwhtyp"/>
                <apex:inputField value="{!oNewInteractionRec.Interacting_With__c}" id="inpintwth"/>
                <apex:inputField value="{!oNewInteractionRec.Caller_Name__c}" id="inpcallname"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection title="{!$Label.HUMSelIntMem}" id="pbsselectIntMem" rendered="{!IF(lstInqAbtWrapp.size>0,true,false)}">
                <apex:outputText value="{!$Label.HUMPlSelOne}" /><br/>
                <apex:pageBlockTable value="{!lstInqAbtWrapp}" var="IntWrapper" >
                    <apex:column >
                        <apex:facet name="header">
                            <apex:inputCheckbox id="Checkall" onclick="checkAll(this,'checkbox')" />
                        </apex:facet>
                        <apex:inputCheckbox id="checkbox" value="{!IntWrapper.bIsSelected}" />
                    </apex:column>   
                    <apex:column headerValue="{!$Label.HUMInteractingAboutAccName}">
                        <apex:outputText value="{!IntWrapper.oIntMember.Interacting_About__r.Name}"/>
                    </apex:column> 
                    <apex:column headerValue="{!$Label.HUMInteractingAboutAccType}">
                        <apex:outputText value="{!IntWrapper.oIntMember.Interacting_About_Type__c}"/>
                    </apex:column> 
                </apex:pageBlockTable>
            </apex:pageblockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>