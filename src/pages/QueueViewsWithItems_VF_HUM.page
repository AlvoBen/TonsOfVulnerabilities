<apex:page standardController="Work_Queue_Setup__c" extensions="QueueViewsWithItems_C_HUM" setup="false" showHeader="false" applyhtmltag="true" sidebar="false" tabStyle="Queue_View__c" >

  <apex:includeScript value="/support/console/36.0/integration.js" />
  <apex:includeScript value="{!URLFOR($Resource.CRM_JQUERY, 'jquery.min.js')}" />
  <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, 'datatables.min.js')}" /><!--DT Upgrade-->
  <apex:includeScript value="{!URLFOR($Resource.CRM_JQUERY, 'jquery-ui.min.js')}"/>
  <apex:includeScript value="{!URLFOR($Resource.QueueViewsWithItems_SR_HUM,'QueueViewsWithItems.js')}" />
  <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, '/FixedHeader-3.3.2/js/dataTables.fixedHeader,js')}" /><!--DT Upgrade-->
  <apex:includeScript value="{!URLFOR($Resource.CRM_DataTables_1_13_4, '/FixedColumns-4.2.2/js/dataTables.fixedColumns.js')}" /><!--DT Upgrade-->
  <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.CRM_DataTables_1_13_4, 'datatables.min.css')}"/> <!--DT Upgrade-->
  <link rel="stylesheet" text="text/css" href="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, 'datatables_HUM.min.css')}" />
  <link rel="stylesheet" text="text/css" href="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/CSS/HoverOver.css')}" />
  <link rel="stylesheet" text="text/css" href="{!URLFOR($Resource.CRM_PLATFORM_TOOLKIT, '/FixedHeader_SR_HUM/fixedheader.css')}" />

  <style>
    td.details-control {
    background: url({!URLFOR($Resource.ClaimDetails_JS_HUM,'/PlusImage.png')}) no-repeat center center;
    background-size: 25px 24px;
    cursor: pointer;
    }

    tr.shown td.details-control {
    background: url({!URLFOR($Resource.ClaimDetails_JS_HUM,'/MinusImage.png')}) no-repeat center center;
    background-size: 28px 28px;
    }
    body{
    font-size: 12px !important;
    }
    btn{
    height:20px !important;
    }
  </style>

  <script type="text/javascript">
    var viewDataTemp = JSON.parse('{!JSENCODE(sQueueViewData)}');
    var ViewData = JSON.stringify(viewDataTemp);
    var permission = {!JSENCODE(IF($Permission.CRMS_910_WQAppAdmin, "true", "false"))};
  </script>

  <div class="Case_Table" style="margin-top: 5px;">
    <div class="col-xs-12"  styleClass="myCssClass">
      <apex:form >
        <apex:actionFunction name="QueueViewModified" rerender="" oncomplete="callModifiedByURL('{!JSENCODE(URL)}')" />
        <apex:actionFunction name="QueueViewsEdit" action="{!editQueueView}" oncomplete="callEditURL('{!JSENCODE(URL)}')" rerender="">
          <apex:param name="qveId" assignTo="{!editId}" value="qveId" />
        </apex:actionFunction>
        <apex:actionFunction name="QueueViewItemEdit" action="{!editQueueViewItem}" oncomplete="callEditURL('{!JSENCODE(URL)}')" rerender="">
          <apex:param name="qveiId" assignTo="{!editqviId}" value="qveiId" />
        </apex:actionFunction>
        <apex:actionFunction name="QueueViewItemDel" action="{!deleteQueueViewItem}" oncomplete="callDelURL('{!JSENCODE(URL)}')" rerender="">
          <apex:param name="qvdiId" assignTo="{!delqviId}" value="qvdiId" />
        </apex:actionFunction>
        <div style="margin-left: 1%;">
          <apex:commandButton value="New Queue View" action="{!newQueueView}" styleClass="btn"  style="text-decoration:none;padding:4px;width:100px;height:20px !important;padding:0.5px 0.5px 0.5px 0.5px !important;border:1px solid gray !important;background:white !important" oncomplete="callEditURL('{!URL}')"/>
        </div>
        <div class="table-responsive" id="tableId">
          <table id="QueueViewTable" class="table table-striped table-bordered  table-hover nowrap" cellspacing="0" style = "width: 100%; font-size : 12px">
            <thead>
              <tr>
                <th></th>
                <th>Action</th>
                <th>Queue View Name</th>
              </tr>
            </thead>
          </table>
        </div>
      </apex:form>
    </div>
  </div>
</apex:page>