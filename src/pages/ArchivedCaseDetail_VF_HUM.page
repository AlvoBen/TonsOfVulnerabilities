.slds-nubbin_bottom-left:before {
    left: 1.5rem;
    top: 100%;
    margin-top: -.5rem
}

.slds-nubbin--bottom-left:after,
.slds-nubbin_bottom-left-corner:after,
.slds-nubbin_bottom-left:after {
    box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, .16);
    z-index: -1
}

.slds-popover :last-child {
    margin-bottom: 0
}

.slds-scope .slds-tabs_default__item.slds-is-active .slds-tabs_default__link {

    font-weight: 700;

 }


    </style>
        <!-- This is where the component gets embeded -->
    <div id="lightning" />
    <script>
        
   let caseDetailData = '{!$CurrentPage.parameters.Params}';
   let parseedData =  JSON.parse(caseDetailData);
                //1. Specify the Lightning App
        $Lightning.use("c:CaseDetailAuraApp", function () {
                        //2. Specify the Aura Component that has LWC in it
            $Lightning.createComponent("c:archivedCaseDetailContainerHum",
                {
                    encodedData: parseedData.recordId,
                    isClassic:true
                },
                "lightning",
                function (cmp) {
                   
                }
            );
        });
        document.addEventListener("opencasecomments", function(event){
         if (sforce.console.isInConsole()) {
            sforce.console.getEnclosingTabId(function(enclosingResult) {
                sforce.console.getEnclosingPrimaryTabId(function(primaryResult) {
                    sforce.console.openSubtab(primaryResult.id, '/apex/ArchivedCaseComments_VF_HUM?Params='+ JSON.stringify(event.detail), true, event.detail.tabName, null, null, 'salesforceSubtab'+event.detail.tabName);
                });
            });
   		 }
          
	});
    
        document.addEventListener("openuserdetailclassic", function(event){
		if (sforce.console.isInConsole()) {
            sforce.console.getEnclosingTabId(function(enclosingResult) {
                sforce.console.getEnclosingPrimaryTabId(function(primaryResult) {
                    sforce.console.openSubtab(primaryResult.id, '/'+event.detail, true, '', null);
                });
            });
        }

	});
    document.addEventListener("dosearch", function(event){
        if (sforce.console.isInConsole()) {
            
            sforce.console.getEnclosingTabId(function(enclosingResult) {
                sforce.console.getEnclosingPrimaryTabId(function(primaryResult) { 
                	sforce.console.openSubtab(primaryResult.id, '/apex/ArchivedCaseViewAll_VF_HUM?Params='+JSON.stringify(event.detail), true, event.detail.nameOfScreen, null, null, 'salesforceSubtab'+event.detail.nameOfScreen);
                });
            });
        }
        
    });
    
    document.addEventListener("openRecordDetailsPage", function(event){
       console.log(' account id in VF ==> ',JSON.stringify(event.detail));
        if (sforce.console.isInConsole()) {
            
            sforce.console.getEnclosingTabId(function(enclosingResult) {
                sforce.console.getEnclosingPrimaryTabId(function(primaryResult) {
                    sforce.console.openSubtab(primaryResult.id, '/'+event.detail, true, '', null);
                });
            });
        }
        
    });
    
    document.addEventListener("dcnLinkevent", function(event){
		window.open(event.detail, '_blank');
        
    });
    
    </script>
</apex:page>