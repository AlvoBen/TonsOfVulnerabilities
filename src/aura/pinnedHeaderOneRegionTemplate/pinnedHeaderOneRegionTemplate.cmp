<!-- 
    Aura component to render pinned header and main region custom template 
Modification Log: 
* Version        Developer                Date                      Description
*  1.0           Mohan Kumar N            10/21/2021                US: 2347414 

 -->
 <aura:component implements="lightning:recordHomeTemplate" description="Pinned Header and one main region" >
    <aura:attribute name="header" type="Aura.Component[]" description="Header"/>
    <aura:attribute name="mainRegion" type="Aura.Component[]" description="Main Region"/>
    <div class="hc-custom-template">
          <div class="hc-section">
              	<div class="hc-custom-header">{!v.header}</div>        
                <div class="hc-scrollable-content slds-p-right_small slds-p-left_small">
                    <lightning:layout  pullToBoundary="small">
                        <lightning:layoutItem size="12">         
                            {!v.mainRegion}
                        </lightning:layoutItem>
                    </lightning:layout>
        		</div>
          </div>
	</div>
</aura:component>