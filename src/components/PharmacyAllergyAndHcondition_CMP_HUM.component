        <span class="waitingDescription">{!$Label.LOADING_HUM}</span>
    </div>
    
    <div id="AllergyErrorMsgId" class="hidemaindiv" ></div>
    <!-- Error message panel -->
    <apex:outputPanel id="AllergyMsgErrorId" Styleclass="displayNone">
         <apex:PageMessage Summary="{!$Label.Pharmacy_Hcon_Errormsg}" severity="Error" Strength="2" title="Error:"  />
         <apex:pagemessages />
    </apex:outputPanel>
    <div id="AllergyDivId" >
    	<table   >
	         <thead>
	              <tr>
	                 <th >{!$Label.Health_Conditions}</th>
	                 <th width="20px"></th>
	                 <th >{!$Label.Allergies}</th>
	   			  </tr>
             </thead>
             <tr>
             	<td> <textarea  id="txtAreaPharHConditions" readonly="true"  rows="12" cols="70"/></td>
             	<td></td>
             	<td> <textarea  id="txtAreaPharAllergy" readonly="true"  rows="12" cols="70"/> </td>
             </tr>
        </table> 
   </div>
    
    <script>
  var sHconErrorMsg = "{!$Label.Pharmacy_Hcon_Errormsg}";
  showLoadingImageAllergies();
    </script>
    
