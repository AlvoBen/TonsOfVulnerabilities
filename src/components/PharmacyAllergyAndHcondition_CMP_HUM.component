<apex:component controller="Pharmacy_C_HUM" id="pharAllerHConCMP">
  <apex:includeScript value="{!URLFOR($Resource.Pharmacy_HealthAllergies_SR_HUM, 'Pharmacy_HealthAllergies_JS_HUM.js')}" />
  <link rel="stylesheet" href="{!URLFOR($Resource.Pharmacy_HealthAllergies_SR_HUM, 'Pharmacy_HealthAllergies_CSS_HUM.css')}"/>
   
    <div id="AllergyLoadingImageId" class="loadingImageDivCon hidemaindiv" >
