<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE properties SYSTEM "properties.dtd">

  <properties>
    <!-- we list here all properties which are known to the scheduler-service -->
    <!-- 
    <property name="enableJobExecution" value="true" description="enables/disables the execution of jobs (default is true)"/>
    <property name="ignoreBlackoutPeriod" value="120000" description="When the blackout period (e.g. time shift, long gc, ...) was larger than the specified time (in ms) and a task has only a single execution time we execute the task immeduiately after the blackout period"/>
     -->
	
    <nested_property name="Tasks">
      <nested_property name="CleanJobTask_Default">
        <!-- REQUIRED PROPERTIES -->        
        <!-- The format is application name followed by a colon, followed by the job definition name. The application name is not mandatory if job definition name is unique -->
        <property name="JobDefinitionName" value="sap.com/scheduler~runtime~gate:CleanJob" />
          <!-- OPTIONAL PROPERTIES -->
          <property name="Description" value="Task which cleans up the scheduler database accordingly to the retention period" />
          <!-- keep the logs of the CleanJob itself 15 days stored -->
          <property name="RetentionPeriod" value="15" />
          <property name="CustomData" value="not used here" />
          
          <!-- List of all required parameters by the CleanJob -->
          <nested_property name="Parameters">
            <property name="HandleStateUnknown" value="true" />
            <property name="HandleStateStarting" value="true" />
          </nested_property>

          <!-- schedule the task -->
          <nested_property name="CronEntry1">
            <!-- Run the clean job every Sunday at 6 am -->
            <property name="entry" value="*:*:*:1:6:00" />
          </nested_property>
       </nested_property>
    </nested_property>
      
  </properties>